{
  "name": "itunes-album-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "install:all": "npm install && npm --prefix client install && npm --prefix server install",
    "client": "npm --prefix client run dev",
    "client:noopen": "npm --prefix client run dev:noopen",
    "server": "npm --prefix server run dev",
    "dev": "concurrently \"npm run client\" \"npm run server\"",
    "dev:background": "concurrently \"npm run client:noopen\" \"npm run server\"",
    "build": "npm --prefix client run build",
    "start:windows": "powershell -ExecutionPolicy Bypass -File .\\start-windows.ps1"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^4.0.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "itunes-album-app": "file:",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "vite": "^4.5.0"
  }
}
